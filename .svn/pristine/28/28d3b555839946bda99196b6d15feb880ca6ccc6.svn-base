    private LambdaQueryWrapper<ExportTemplateDetail> buildQueryWrapper(ExportTemplateDetailBo bo) {
        Map<String, Object> params = bo.getParams();
        LambdaQueryWrapper<ExportTemplateDetail> lqw = Wrappers.lambdaQuery();
        lqw.eq(bo.getExportId() != null, ExportTemplateDetail::getExportId, bo.getExportId());
        lqw.eq(bo.getItemId() != null, ExportTemplateDetail::getItemId, bo.getItemId());
        lqw.eq(bo.getIsDelete() != null, ExportTemplateDetail::getIsDelete, bo.getIsDelete());
        return lqw;
    }

    /**
